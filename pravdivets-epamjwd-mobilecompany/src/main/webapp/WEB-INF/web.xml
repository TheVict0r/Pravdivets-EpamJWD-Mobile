<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<context-param>
		<param-name>companyEmail</param-name>
		<param-value>mobile@mobile.by</param-value>
	</context-param>	

	<error-page>
		<exception-type>java.lang.RuntimeException</exception-type>
		<location>/WEB-INF/jsp/error.jsp</location>
	</error-page>

	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/error.jsp</location>
	</error-page>

	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/jsp/error.jsp</location>
	</error-page>

	<listener>
		<listener-class>by.epamjwd.mobile.controller.listener.AppContextListener</listener-class>
	</listener>
  
    <filter>
	    <filter-name>CharacterFilter</filter-name>
	    <filter-class>by.epamjwd.mobile.controller.filter.CharacterSetFilter</filter-class>
	</filter>

	<filter-mapping>
	    <filter-name>CharacterFilter</filter-name>
	    <url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>LocaleFilter</filter-name>
		<filter-class>by.epamjwd.mobile.controller.filter.SessionLocaleFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>LocaleFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  
  	<session-config>
   		<session-timeout>30</session-timeout>
	</session-config>
  
</web-app>